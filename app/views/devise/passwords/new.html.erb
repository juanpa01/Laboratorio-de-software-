<div class="container">
	<h2>¿Olvidaste tu contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, "Correo electronico", style:"font-size: 20px;" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Enviarme las instrucciones para restablecer la contraseña", class:"btn btn-success" %>
  </div>
<% end %>
<br><br>
<%= render "devise/shared/links" %>

</div>